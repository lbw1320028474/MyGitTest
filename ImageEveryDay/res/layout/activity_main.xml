<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEDED"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:background="@drawable/kind_bg"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/image_kinds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="分类"
            android:textColor="#EDEDED"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/soft_goods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="精品列表"
            android:textColor="#EDEDED"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/soft_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="设置"
            android:textColor="#EDEDED"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/image_kinds_layout"
        android:layout_width="fill_parent"
        android:layout_height="76dp"
        android:background="@drawable/kind_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:background="@drawable/kind_bg"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_secenery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="风景"
                android:textColor="#EDEDED"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_life"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="纪实"
                android:textColor="#EDEDED"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_lomo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="LOMO"
                android:textColor="#EDEDED"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_sexy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="宠物"
                android:textColor="#EDEDED"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:background="@drawable/kind_bg"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_dawu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="达物"
                android:textColor="#EDEDED"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_meishi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="美食"
                android:textColor="#EDEDED"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_shenghuo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="生活"
                android:textColor="#EDEDED"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_sehngtai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="生态"
                android:textColor="#EDEDED"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:background="@drawable/kind_bg"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_happy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="搞笑"
                android:textColor="#EDEDED"
                android:textSize="20sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:scaleType="fitXY"
            android:src="@drawable/line_bg" />
    </LinearLayout>

    
    <com.baidu.ops.appunion.sdk.banner.BaiduBanner
        android:id="@+id/baiduBanner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/content_linner"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >
    </LinearLayout>

</LinearLayout>