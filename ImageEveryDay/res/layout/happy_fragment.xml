<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradview_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@drawable/gradview_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/happy_lastpage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="上一页"
                android:textColor="#FCFCFC"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/happy_pageindex"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="1/150页"
                android:textColor="#F8F8FF"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/happy_nextpager"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="下一页"
                android:textColor="#FCFCFC"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFF0"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/happy_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="介绍"
                android:textColor="#FF0000"
                android:textSize="25sp" />

            <ImageView
                android:id="@+id/happy_image1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:src="@drawable/welcome" />
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="15dp"
            android:background="#00C5CD" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFF0"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/happy_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="介绍"
                android:textColor="#FF0000"
                android:textSize="25sp" />

            <ImageView
                android:id="@+id/happy_image2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:src="@drawable/welcome" />
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="15dp"
            android:background="#00C5CD" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFF0"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/happy_03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="介绍"
                android:textColor="#FF0000"
                android:textSize="25sp" />

            <ImageView
                android:id="@+id/happy_image3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:src="@drawable/welcome" />
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="15dp"
            android:background="#00C5CD" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFF0"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/happy_04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="介绍"
                android:textColor="#FF0000"
                android:textSize="25sp" />

            <ImageView
                android:id="@+id/happy_image4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:src="@drawable/welcome" />
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="15dp"
            android:background="#00C5CD" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFF0"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/happy_05"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="介绍"
                android:textColor="#FF0000"
                android:textSize="25sp" />

            <ImageView
                android:id="@+id/happy_image5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:src="@drawable/welcome" />
        </LinearLayout>

        <GridView
            android:id="@+id/happy_gridview"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:columnWidth="90dp"
            android:gravity="center"
            android:horizontalSpacing="10dp"
            android:numColumns="auto_fit"
            android:stretchMode="columnWidth"
            android:verticalSpacing="10dp" >
        </GridView>
    </LinearLayout>

</ScrollView>